<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %></title>
    <link rel="icon" href="https://apprecs.org/ios/images/app-icons/256/a3/995060131.jpg">
    <link rel="stylesheet" href="/CSS/tienda-jumbo.css">
</head>
<body>
    <div class="contenedor-principal">
        <div class="container-header">
            <nav class="navigation-bar">
                <div class="leading">
                    <button class="account-button">Tiendas</button>
                </div>
                <h1 class="title"><%= name %></h1>
                <div class="trailing">
                    <button class="cart-button">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </button>
                </div>
            </nav>
            <header class="header">
                <div class="flex">
                    <button>En 90 min</button>
                    <button>Politicas de precio</button>
                </div>
                <div class="searchbar">
                    <div class="search-container">
                        <label for="search-field" class="search-icon">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </label>
                        <div class="search-input">
                            <input id="search-field" name="search-field" class="search-field" type="search" placeholder="Buscar tiendas y productos" autocomplete="off" spellcheck="false" tabindex="-1" value="">
                        </div>
                    </div>
                </div>
                <div class="flex">
                    <button>Destacados</button>
                    <button>Pasillos</button>
                    <button>Pedidos</button>
                </div>
            </header>
        </div>
        <main>
            <div class="container">
                <div class="title">
                    <h2>Frutas y verduras</h2>
                </div>
                <div class="contenido">
                    <% for(const product of products) { %>
                    <div class="producto">
                        <a href="/HTML/producto-banana.html">
                            <div class="producto-imagen">
                                <img src="<%= product.image %>" alt="<%= product.name %>" width="100" height="100">
                            </div>
                            <div class="producto-info">
                                <h4><%= product.name %></h4>
                                <p><%= product.price %></p>
                                <p><%= product.unitDescription %></p>
                                <p><%= product.unit %></p>
                            </div>
                        </a>
                        <button>Agregar</button>
                    </div>
                    <% } %>
                </div>
            </div>
        </main>

    </div>
    
    <script src="https://kit.fontawesome.com/dd5e87f640.js" crossorigin="anonymous"></script>
</body>
</html>